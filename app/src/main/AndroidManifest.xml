<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appradar.viper.moovon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:name=".GlobalApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="mutils.RecognizeMotionService" />
        <service
            android:name="mutils.MyTestService"
            android:exported="false" />

        <receiver
            android:name="mutils.CustomAlarmReceiver"
            android:process=":remote" />

        <activity android:name=".SettingsActivity" android:windowSoftInputMode="adjustResize"></activity>
    </application>

</manifest>